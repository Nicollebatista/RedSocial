@using RedSocial.Core.Application.ViewModels.User;
@model UserViewModel;

@{
    ViewData["Title"] = "Buscar Amigos";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-light text-center">
                    <h2>BUSCAR AMIGOS</h2>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Friend" asp-action="SearchUsers">
                        <div class="input-group">
                            <input required type="text" class="form-control" placeholder="Buscar usuarios..." name="username" />
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">Buscar</button>
                            </div>
                           
                        </div>
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewBag.ErrorMessage
                            </div>
                        }
                    </form>

                    <!-- Mostrar resultados de la búsqueda -->
                    @if (Model != null )

                    {

                        <div class="mt-3">
                            <h3>Resultados de la búsqueda:</h3>
                            
                            <ul class="list-group">
 
                                    <li class="list-group-item"><img src="@Model.ImageUrl" class="rounded-circle" width="50" height="50" /> @Model.Username
                                    <form method="post" asp-controller="Friend" asp-action="ToBeFriends" name="Id" asp-route-id="@Model.Id">
                                        <input type="hidden" name="userId" value="@Model.Id" />
                                        
                                        <button type="submit" class="btn btn-primary">To Be Friends</button>
                                        
                                    </form>
                                   
                                    </li>

                            </ul>
                       </div>
                    }
                    else
                    {
                    <div class="mt-3">
                        <p>No se encontraron resultados.</p>
                    </div>
                    }

                <form method="post" asp-controller="Friend" asp-action="Index">
                    <button type="submit" class="btn btn-warning mt-3">Volver Atrás</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
